@using Radzen.Blazor
@inherits LayoutComponentBase
@inject PavementCondition.UI.Services.Account.IAccountService AccountService
@inject NavigationManager NavigationManager

<RadzenDialog />
<div class="page">
    @if (isLogged)
    {
        <div class="sidebar">
            <NavMenu />
        </div>

    }
    <div class="main">
        <div class="content px-4">
            <Alert />
            @Body
        </div>
    </div>
</div>

@code {
    private bool isLogged = true;

    protected override async Task OnInitializedAsync()
    {
        var token = await AccountService.GetTokenAsync();


        isLogged = !(string.IsNullOrEmpty(token));


        if (!isLogged)
        {
            NavigationManager.NavigateTo("/account/login");
        }
    }
}
